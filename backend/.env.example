# FairLend Backend Configuration

# Server
PORT=3001

# FairScale API (Solana-based reputation scoring)
# Get your API key at: https://sales.fairscale.xyz/
# API docs: https://swagger.api.fairscale.xyz/
FAIRSCALE_API_KEY=your_fairscale_api_key_here

# Attestation Signing
# Generate with: node -e "console.log(require('ethers').Wallet.createRandom().privateKey)"
ATTESTATION_SIGNER_KEY=your_private_key_here

# Blockchain (Base for lending contracts)
CHAIN_ID=8453
CONTRACT_ADDRESS=your_deployed_contract_address

# Base RPC (for reading contract state if needed)
BASE_RPC_URL=https://mainnet.base.org
